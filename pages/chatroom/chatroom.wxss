.chatroom {
	position: fixed;
	width: 100%;
	height: 100%;
	background-color: #e5e5e5;
}

.chat-box {
	width: 100%;
	height: calc(100% - 88rpx);
}

.chatroom-input {
	position: fixed;
	width: 100%;
	bottom: 0;
}

.chat-message {
	display: flex;
	width: fit-content;
	background-color: #44426a;
	padding: 10rpx;
	color: #fff;
}